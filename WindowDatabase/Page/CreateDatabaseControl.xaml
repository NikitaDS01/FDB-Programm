<UserControl x:Class="WindowDatabase.Page.CreateDatabaseControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WindowDatabase.Page"
             xmlns:vm="clr-namespace:WindowDatabase.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
        <TextBlock Text="Создание Базы данных" 
                   Style="{StaticResource Header}"/>
        <TextBlock Text="Название БД"
                   Margin="5,10,10,0"/>
        <TextBox FontSize="18" 
                 Text="{Binding Name}"
                 Margin="10,0,10,0"/>

        <TextBlock Text="Путь БД"
                   Margin="5,10,10,0"/>
        <Button Content="Выбрать путь"
                Margin="10,0,10,10"
                Command="{Binding SetPathCommand}"/>
        <TextBlock Text="{Binding Path=Path, StringFormat='Путь = {0}'}"/>

        <Button Content="Сохранить базу данных"
                Margin="40,20,40,0"
                Command="{Binding AcceptCommand}"/>
        <Button Content="Отменить"
                Margin="40,20,40,0"
                Command="{Binding CancelCommand}"/>
    </StackPanel>
</UserControl>
