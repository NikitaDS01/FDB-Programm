<UserControl x:Class="WindowDatabase.Core.UserControls.NumberParameterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WindowDatabase.Core.UserControls"
             mc:Ignorable="d" 
             x:Name="userControlSelf">
    <Viewbox>
        <StackPanel MinWidth="250" MaxWidth="500">
            <TextBlock x:Name="txtBox" 
                   Text="{Binding ElementName=userControlSelf, Path=Title}"
                   Style="{StaticResource ParameterText}"/>
        <TextBox Text="{Binding ElementName=userControlSelf, Path=Value}"
                 Height="50"
                 IsReadOnly="{Binding ElementName=userControlSelf, Path=IsReadOnly}"
                 Style="{StaticResource ParameterBox}"/>
    </StackPanel>
    </Viewbox>
</UserControl>
