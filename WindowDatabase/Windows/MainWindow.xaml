<Window x:Class="WindowDatabase.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowDatabase.Windows"
        mc:Ignorable="d"
        Title="Список проектов" 
        Height="1080" Width="1080"
        MinHeight="800" MinWidth="800"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Style="{StaticResource ColorWindow}">
    <Window.Resources>
        <ResourceDictionary Source="\Resources\TemplateMainDictionary.xaml"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.03*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Menu Height="30" 
              VerticalAlignment="Top"
              Grid.Row="0">
            <MenuItem Header="Выйти"
                      Command="{Binding ReturnDBCommand}"/>
        </Menu>
        <ContentPresenter Grid.Row="1" 
                          Content="{Binding CurrentContentVM}"/>
    </Grid>

</Window>
